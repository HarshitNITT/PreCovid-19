        <activity android:name="com.coronavirus.precovid.LoginActivity"  android:theme="@style/ApplicationTheme.Dark" android:windowSoftInputMode="adjustResize"></activity>
        <activity android:name="com.coronavirus.precovid.SignupActivity" android:theme="@style/ApplicationTheme.Dark"></activity>
         <activity
            android:name="com.coronavirus.precovid.MapsActivityCurrentPlace"
            >
